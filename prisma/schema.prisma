generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("LOCAL_DATABASE_URL")
}

model User {
  id        String @id @default(cuid())
  firstname String
  lastname  String
  email     String @unique
  password  String
  owner     Link[] @relation("owned")
  links     Link[]
}

model Link {
  id   String @id @default(cuid())
  uid  String @unique
  link String @unique

  owner User   @relation("owned", fields: [userId], references: [id], onDelete: Cascade)
  users User[]

  userId String
}
